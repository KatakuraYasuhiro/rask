<div class="flex">
  <h1 class="text-3xl font-bold py-3">タスク一覧</h1>
  <div class="flex-1"></div>
  <%= link_to '新規作成', new_task_path, class: "my-auto" %>
</div>

<% @tasks.each do |task| %>
  <div class="p-3 border rounded flex space-x-4">
    <div>
      <p class="text-xl"><%= task.content %></p>
      <p><%= link_to task.user.name, task.user %></p>
    </div>
    <div class="flex-1"></div>
    <%= link_to '詳細', task %>
    <% if logged_in? %>
      <%= link_to '編集', edit_task_path(task) %>
      <%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
<% end %>